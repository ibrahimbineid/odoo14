                    <field name="attenuation_lines">
                        <tree editable="bottom">
                            <field name="fibre_no" width="10%"/>
                                <field name="fif_nm_tx" width="10%"/>
                                <field name="fif_nm_rx" width="10%"/>
                                <field name="fif_nm_section" width="25%"/>
                                <field name="six_nm_tx" width="10%"/>
                                <field name="six_nm_rx" width="10%"/>
                                <field name="six_nm_section" width="25%"/>
                        </tree>
                    </field>

                    <field name="requirements_lines">
                        <tree editable="bottom">
                            <field name="requirement"/>
