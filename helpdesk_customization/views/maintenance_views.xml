                        <button string="Camera Client Approval" class="oe_highlight" type="object" name="action_camera_client_approve"  attrs="{'invisible': [('is_camera_client_approved', '=', True)]}" groups="helpdesk_customization.group_cameras_client"/>
                    </group>
                </page>
                <page string="Site Power" attrs="{'invisible': [('is_site', '=', False)]}">
                    <field name="site_lines">
