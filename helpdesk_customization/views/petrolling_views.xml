<odoo>

    <record id="petrol_site_view_tree" model="ir.ui.view">
        <field name="name">petrolling.site.tree</field>
        <field name="model">petrolling.site</field>
        <field name="arch" type="xml">
            <tree string="Petrol">
                <field name="ref_name"/>
                <field name="site_group_id"/>
                <field name="date" />
                <field name="user_id"/>
                <field name="employee_id"/>
                <field name="sites_region"/>
                <field name="ck_status"/>
                <field name="site_id" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="petrol_site_view_form" model="ir.ui.view">
        <field name="name">petrolling.site.form</field>
        <field name="model">petrolling.site</field>
        <field name="arch" type="xml">
            <form string="Petrol">
                <sheet>
                    <group col="4">
                        <field name="site_group_id" required="1"/>
                        <field name="site_id" widget="many2many_tags" required="1"/>
                        <field name="sites_region"/>
                        <field name="date"/>
                        <field name="user_id"/>
                        <field name="employee_id"/>
                        <field name="ck_status"/>
                    </group>
                    <field name="petrol_lines">
                        <tree editable="bottom" create="1">
                            <field name="alarm_name"/>
                            <field name="issue"/>
                            <field name="action"/>
                            <field name="image"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="petrol_site_action" model="ir.actions.act_window">
        <field name="name">Petrolling</field>
        <field name="res_model">petrolling.site</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="view_id" ref="helpdesk_customization.petrol_site_view_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new Contractor
            </p>
        </field>
    </record>

    <!-- equiment.request : actions -->
    <record id="petrol_report_action" model="ir.actions.act_window">
        <field name="name">Petrolling Report</field>
        <field name="res_model">petrolling.site</field>
        <field name="view_mode">kanban,tree,form,pivot,graph</field>
        <field name="view_id" ref="petrol_site_view_tree"/>
    </record>

    <menuitem
            id="menu_petrol"
            name="Petrolling"
            action="petrol_site_action"
            sequence="7"
            web_icon="helpdesk_customization,static/description/icon.png"
    />
    <menuitem
        id="menu_p_reports"
        name="Reporting"
        parent="menu_petrol"
        action="petrol_report_action"
        sequence="10"/>
</odoo>
