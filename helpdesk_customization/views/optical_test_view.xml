<odoo>


    <record id="optical_test_view_tree" model="ir.ui.view">
        <field name="name">optical.test.tree</field>
        <field name="model">optical.test</field>
        <field name="arch" type="xml">
            <tree string="Optical Test">
                <field name="fif_nm"/>
                <field name="fif_nm_units"/>
                <field name="six_nm"/>
                <field name="six_nm_units"/>
            </tree>
        </field>
    </record>

    <record id="optical_test_view_form" model="ir.ui.view">
        <field name="name">optical.test.form</field>
        <field name="model">optical.test</field>
        <field name="arch" type="xml">
            <form string="Site Type">
                <sheet>
                    <group>
                        <group string="1550nM">
                            <field name="fif_nm"/>
                            <field name="fif_nm_units"/>
                        </group>

                        <group string="1625nM">
                            <field name="six_nm"/>
                            <field name="six_nm_units"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="optical_testing_action" model="ir.actions.act_window">
        <field name="name">Optical Test</field>
        <field name="res_model">optical.test</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="helpdesk_customization.optical_test_view_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new Contractor
            </p>
        </field>
    </record>

    <menuitem
            id="menu_optical_testing"
            name="Manage Optical Testing"
            parent="helpdesk.helpdesk_menu_config"
            action="optical_testing_action"
            sequence="7"/>

</odoo>