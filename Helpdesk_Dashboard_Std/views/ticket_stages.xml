<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="helpdesk_stage_values2" name="Help Desk Stages">
        <t>
            <div class="row">
                <div class="col-lg-12" style="margin-top:10px;">
                    <form action="/get_stage_values" method="get">
                        <t t-foreach="values" t-as="v" class="col-xl-3 col-md-6 col-sm-6 col-xs-12">
                            <div class="info-box b1">
                                <span class="info-box-icon bg-aqua"><i class="fa fa-users"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text" t-esc="v"/>
                                    <span class="info-box-number" t-esc="values[v]" />
                                </div>
                            </div>
                        </t>
                    </form>
                </div>

            </div>
        </t>
    </template>
</odoo>