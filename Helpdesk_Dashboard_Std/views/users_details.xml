<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="users_list_details" name="Users Details">
          <t t-call="website.layout">
        <div id="wrap" style="margin-top:30px;padding-bottom:50px;">
        <t>
           <div class="container petrolling-stage">
                <div class="mt25">
             <div class="table-responsive">
                <table class="table table-bordered" style="background-color:#fff;">
                            
                    <thead>
                        <tr><th colspan="2" style="text-align:center;font-weight:bold;background-color:#875a7b;color:#fff;font-size:18px;">Users</th></tr>
                    <tr style="text-align:center;">
                        <th>Name</th>
                        <th>Company</th>
                    </tr>
                    </thead>
                    
                    <tbody>
        <t t-foreach="my_details" t-as="line">
            <tr style="text-align:center;">
            <td><span t-esc="line.name"/></td>
            <td><span t-esc="line.company_id.name"/></td>
            </tr>
        </t>

                    </tbody>
                    
                </table>
            </div>
        </div>
            </div>
                           
                          
        </t>
        </div>
        </t>
    </template>
</odoo>